-#  This file is app/views/movies/index.html.haml
%h2 All Movies

= link_to 'Reset', movies_path

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => ("hilite bg-warning" if params[:sort] == "title")}= link_to 'Movie Title', movies_path(:sort => 'title'), :id => "title_header", :style => ("color:#ff0000" if params[:sort] == "title")
      %th Rating
      %th{:class => ("hilite bg-warning" if params[:sort] == "release_date")}= link_to 'Release Date', movies_path(:sort => 'release_date'), :id => "release_date_header", :style => ("color:#ff0000" if params[:sort] == "release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
